<script>
  const likes = {
    1: 0,
    2: 0
  };

  function likePost(postId) {
    likes[postId]++;
    document.getElementById(`likes-${postId}`).textContent = likes[postId] + " إعجاب";
  }

  function commentPost(postId) {
    alert("ميزة التعليقات غير مفعلة حاليا.");
  }
